    VK_COMMAND_POOL_CREATE_TRANSIENT_BIT,                   VK_COMMAND_POOL_RESET_RELEASE_RESOURCES_BIT,
    VK_COMMAND_POOL_CREATE_RESET_COMMAND_BUFFER_BIT,    }
    VK_COMMAND_POOL_CREATE_PROTECTED_BIT,
}



